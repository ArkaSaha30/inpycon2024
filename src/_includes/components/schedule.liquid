<section class="schedule pb-0 pb-md-5 pt-2" id="schedule">
  <div class="container pt-5">
    <div class="row pt-5 pb-5 justify-content-center">
      <div class="col-md-12">
        <h2 class="title-1 text-center mb-5" data-aos="fade-up" data-aos-duration="1000">Schedule</h2>
        <ul class="schedule-tabs-menu nav nav-pills" role="tablist" id="pills-tab">
        {% for day in schedule %}
          <li class="nav-item" role="tab">
            <button
            class="schedule-tab-link pt-2 {% if day.id == 'sep21' %}active{% endif %}"
            id="pills-{{ day.id }}-tab"
            data-bs-toggle="pill"
            data-bs-target="#pills-{{ day.id }}"
            type="button"
            role="tab"
            aria-controls="pills-{{ day.id }}"
            aria-selected="{% if day.id == 'sep21' %}true{% else %}false{% endif %}">
                <div class="subtitle schedule-tab">{{ day.description | capitalize }}</div>
                <div class="schedule-tab-link-text schedule-tab">{{ day.title }}</div>
            </button>
          </li>
        {% endfor %}
        </ul>
        <div class="tab-content" id="pills-tabContent">
          {% for day in schedule %}
          {% assign eventType = day.type %}
          {% assign trackLabels = day.trackLabels %}
          <div class="tab-pane fade {% if day.id == 'sep21' %}show active{% endif %}" id="pills-{{ day.id }}"
            role="tabpanel" aria-labelledby="pills-{{ day.id }}-tab">
            <!-- Schedule Table for the Day -->
            <div class="tab-con pt-5 mt-3">
              <div class="schedule schedule-container">
                {% for session in day.schedule %}
                {% if session.tracks.length == 1 %}

                <div class="schedule__card card" style="grid-column: 1 / 5;">
                {% comment %} conditional anchor tag {% endcomment %}
                {% if track.link %}
                  <a href="{{session.tracks[0].link}}" class="text-reset text-decoration-none stretched-link"
                  target="_blank" rel="noopener noreferrer">
                    <i class="fa fa-link"></i>
                {% endif %}
                {% if session.tracks[0].type == "keynote" %}
                  <h5 class="card-header bg-warning text-light">
                    Keynote
                  </h5>
                {% endif %}
                <div class="card-body">
                  <h5 class="card-title">{{session.tracks[0].title}}</h5>
                    <h6 class="card-subtitle mt-2 mb-2 text-muted fs-5">{{session.start_time}} - {{session.end_time}}</h6>
                  </div>
                  {% if track.link %}
                  </a>
                  {% endif %}
                </div>
                {% else %}
                <div class="schedule__row"
                  style="grid-column: 1/5; grid-template-columns: repeat({{session.tracks.length}}, 1fr)">
                  {% for track in session.tracks %}
                  <div class="schedule__card card" style="text-align: left;">
                     {% comment %} conditional anchor tag {% endcomment %}
                    {% if track.link %}
                      <a href="{{session.tracks[0].link}}" class="text-reset text-decoration-none stretched-link" target="_blank" rel="noopener noreffer">
                    {% endif %}
                    {% if session.tracks[0].type == "keynote" %}
                      <h5 class="card-header bg-warning">
                        Keynote
                      </h5>
                    {% endif %}
                    <div class="card-body">
                      <span class="badge bg-warning mt-2 mb-2">{{trackLabels[forloop.index0]}}</span>
                      <h5 class="card-title">{{track.title}}</h5>
                      <h6 class="card-subtitle mt-4 mb-2 text-muted fs-5">
                          {{session.start_time}} - {{session.end_time}}</h6>
                    </div>
                    {% if track.link %}
                      </a>
                    {% endif %}
                  </div>
                  {% endfor %}
                </div>
                {% endif %}
                {% endfor %}
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
